pipeline {
    agent any



    stages {

        stage('Verificar herramientas') {
            steps {
                bat 'echo Verificando herramientas...'
                bat 'java -version'
                bat 'mvn -version'
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Instalaci贸n') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Pruebas Selenium') {
            steps {
                bat 'mvn test'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
        failure {
            echo 'La ejecuci贸n fall贸.'
        }
        success {
            echo 'La ejecuci贸n fue exitosa.'
        }
    }
}


