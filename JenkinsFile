pipeline {
    agent any



    stages {

stage('Install Maven manually') {
            steps {
                sh '''
                    wget https://archive.apache.org/dist/maven/maven-3/3.9.5/binaries/apache-maven-3.9.5-bin.tar.gz
                    tar -xvzf apache-maven-3.9.5-bin.tar.gz
                    export MAVEN_HOME=$PWD/apache-maven-3.9.5
                    export PATH=$MAVEN_HOME/bin:$PATH
                    mvn -v
                '''
            }
        }
        stage('Verificar herramientas') {
            steps {
                bat 'echo Verificando herramientas...'
                bat 'java -version'
                bat 'mvn -version'
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Instalaci贸n') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Pruebas Selenium') {
            steps {
                bat 'mvn test'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
        failure {
            echo 'La ejecuci贸n fall贸.'
        }
        success {
            echo 'La ejecuci贸n fue exitosa.'
        }
    }
}


