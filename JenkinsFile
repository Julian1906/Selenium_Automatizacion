pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven_3.9.5', type: 'hudson.tasks.Maven$MavenInstallation'
        PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'mvn test'
            }
        }
    }
}
