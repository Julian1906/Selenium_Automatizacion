pipeline {
    agent any

    environment {
        // Define las herramientas instaladas en Jenkins
        MAVEN_HOME = tool name: 'Maven_3.9.5', type: 'hudson.tasks.Maven$MavenInstallation'
        JAVA_HOME = tool name: 'JDK8', type: 'hudson.model.JDK'

        // Añade Maven y Java al PATH
        PATH = "${MAVEN_HOME}\\bin;${JAVA_HOME}\\bin;${env.PATH}"
    }

    stages {

        stage('Verificar herramientas') {
            steps {
                bat 'echo Verificando herramientas...'
                bat 'java -version'
                bat 'mvn -version'
            }
        }

        stage('Checkout') {
            steps {
                checkout scm git 'https://github.com/Julian1906/Selenium_Automatizacion.git'
            }
        }

        stage('Instalación') {
            steps {
                bat 'mvn clean install'
            }
        }

        stage('Pruebas Selenium') {
            steps {
                bat 'mvn test'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizado.'
        }
        failure {
            echo 'La ejecución falló.'
        }
        success {
            echo 'La ejecución fue exitosa.'
        }
    }
}


